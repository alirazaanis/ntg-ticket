{
  "name": "ntg-ticket",
  "version": "1.0.0",
  "description": "NTG Ticket System - Full Stack Application",
  "private": true,
  "scripts": {
    "install:backend": "cd apps/backend && npm install",
    "install:frontend": "cd apps/frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "build": "npm run install:all && npm run build:backend && npm run build:frontend",
    "start:backend": "cd apps/backend && npm start",
    "start:frontend": "cd apps/frontend && npm start",
    "start": "npm run start:backend",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "db:generate": "cd apps/backend && npm run db:generate",
    "db:push": "cd apps/backend && npm run db:push",
    "db:seed": "cd apps/backend && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}